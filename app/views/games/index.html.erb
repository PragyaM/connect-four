<%= render partial: "header" %>

<% if Game.not_waiting.pluck(current_user).size > 0 %>
<% if Game.waiting.empty? %>
	<%= form_for Game.new do |f| %>
		<% f.submit "New Game" %>
	<% end %>
<% else %>
	<p>
		<ul>
			<% Game.waiting.each do |game| %>
				<%= form_for [game] do |f| %>
					<%= f.hidden_field(:user, value: current_user) %>
					<%= f.submit "Join #{game.player_1.name}'s game"%>
				<% end %>
			<% end %>
		</ul>
	</p>
<% end %>